pam_service_name=vsftpd
seccomp_sandbox=NO
anonymous_enable=NO
local_enable=YES
write_enable=YES
xferlog_enable=YES
connect_from_port_20=YES
ftpd_banner=Welcome to lfourage's FTP service.
allow_writeable_chroot=YES
chroot_local_user=YES
#secure_chroot_dir=/home
user_sub_token=$USER
local_root=/home/$USER/ftp
userlist_enable=YES
userlist_file=/etc/vsftpd/vsftpd.userlist
userlist_deny=NO
pasv_promiscuous=NO
pasv_enable=YES
pasv_min_port=30020
pasv_max_port=30021
listen=YES
pasv_address=_IP_
ssl_enable=YES
rsa_cert_file=/etc/ssl/certs/localhost.crt
rsa_private_key_file=/etc/ssl/certs/localhost.key
ssl_tlsv1=YES
ssl_sslv2=NO
ssl_sslv3=NO
